{
  "compilerOptions": {
    "target": "es2020",
    "strict": false,
    "allowJs": true,
    "importHelpers": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "resolveJsonModule": false,
    "outDir": "dist",
    "sourceMap": true,
    "baseUrl": ".",
    "lib": ["es2020", "dom"]
  },
  "include": [
    "src/**/*"
  ],
  "types": ["mocha"]
}
